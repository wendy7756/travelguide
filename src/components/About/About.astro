---
/**
 * * About section
 */

import profileImage from "@assets/images/photographer-min.jpg";
import { Image } from "astro:assets";
---

<section id="about" class="site-container scroll-mt-10 py-8 md:py-12">
	<div class="flex flex-col md:flex-row">
		<div class="md:w-2/3">
			<h2 class="h3 text-primary-500 text-pretty uppercase">Looking for a reliable tour guide?</h2>
			<h3 class="h2 mt-4">Contact @Wendy </h3>
			<div class="bg-base-100 mt-8 p-8 md:mb-20 lg:text-lg">
				<p>
					🇨🇳 Native Chinese guide with over 20 years of local experience <br />
					😊 Energetic, lively, helpful, friendly, knowledgeable <br />
					🎓 Graduate of a Top 100 Global University <br />
					💬 Fluent English speaker 🇺🇸TOEFL 101 🇬🇧IELTS 7.5 <br />
					📷 Skilled in photography and editing <br />
					    <br />
					📧 wendy7756@outlook.com
				</p>
				
			</div>
		</div>
		<div class="mr-auto max-w-md md:w-1/3 md:max-w-none">
			<div class="my-auto aspect-[3/4] w-full overflow-hidden">
				<Image
					src={profileImage}
					alt="Wendy"
					width={450}
					densities={[1.5, 2]}
					class="h-auto min-h-full w-full min-w-full object-cover"
				/>
			</div>
		</div>
	</div>
</section>

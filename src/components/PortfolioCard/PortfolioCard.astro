---
import Button from "@components/Button/Button.astro";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
	portfolio: CollectionEntry<"portfolios">;
	noTransitions?: boolean;
}

const { portfolio, noTransitions = false } = Astro.props as Props;
const { title, description, heroImage } = portfolio.data;
---

<div class="flex flex-col gap-4">
	<a href={`/portfolio/${portfolio.id}`} class="overflow-hidden w-full h-64">
		{
			noTransitions ? (
				<Image
					src={heroImage}
					alt={title}
					width={600}
					densities={[1.5, 2, 3]}
					class="w-full h-full object-cover"
				/>
			) : (
				<Image
					src={heroImage}
					alt={title}
					width={600}
					densities={[1.5, 2, 3]}
					class="w-full h-full object-cover"
					transition:name={`portfolio-image-${portfolio.id}`}
				/>
			)
		}
	</a>

	<div class="flex flex-col justify-between gap-2">
		<div>
			<h3 class="h3 text-primary-500 tracking-widest">{title}</h3>
			<p class="mt-2 text-sm lg:text-base">{description}</p>
		</div>
		<Button variant="ghost" arrow="right" href={`/portfolio/${portfolio.id}`} class="pl-0 mt-2">
			View More
		</Button>
	</div>
</div>